{
    "compilerOptions": {
        "target": "es6",
        "downlevelIteration": true,
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": false,
        "outDir": "./",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}